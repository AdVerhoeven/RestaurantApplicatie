@model IList<ExcellentTaste.Models.OrderItem>

<table class="table" id="itemcontainer">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].IsReady)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                @Html.HiddenFor(m => m[i].Id)
                @Html.HiddenFor(m => m[i].ProductId)
                @Html.HiddenFor(m => m[i].OrderId)
                <td>
                    @Html.DisplayFor(m => m[i].Product.Name)
                </td>
                <td>
                    @if (Model[i].IsReady)
                    {
                        @Html.DisplayFor(m => m[i].Quantity)
                    }
                    else
                    {
                        @Html.EditorFor(m => m[i].Quantity)
                    }
                </td>
                <td>
                    @Html.DisplayFor(m => m[i].IsReady)
                </td>
                <td>
                    @if (!Model[i].IsReady)
                    {
                        <button class="btn btn-secondary" type="button" onclick="IncreaseItem(@Model[i].Id)">+</button>
                        <button class="btn btn-secondary" type="button" onclick="DecreaseItem(@Model[i].Id)">-</button>
                        <button class="btn btn-secondary" type="button" onclick="RemoveItem(@Model[i].Id)">Remove</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
